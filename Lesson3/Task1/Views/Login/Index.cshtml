﻿@{
    Layout = null;
}
@model Task1.Models.UserValidationModel

<html>
<head>
    <title>Login Form</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
</head>
<body>
    <h2>Login Page</h2>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {   
        <table>
            <tbody>
                <tr>
                    <td><label><b>User Name*</b></label></td>
                    <td><input type="text" asp-for="UserName" placeholder="Username"></td>
                    <td><span asp-validation-for="UserName" style="color:red"></span></td>
                </tr>
                <tr>
                    <td><label><b>Password*</b></label></td>
                    <td><input type="Password" asp-for="Password" placeholder="Password"></td>
                    <td><span asp-validation-for=Password style="color:red"></span></td>
                </tr>
            </tbody>
        </table>
        @if (!string.IsNullOrEmpty(Model?.Message))
        {
            <span style="color:red">@Model.Message</span>
        }
        <br>
        <input type="submit" name="log" id="log" value="Log In Here">
        <br><br>
        @*<input type="checkbox" name="remember" id="check">
        <span>Remember me</span>*@
    }
</body>
</html>
